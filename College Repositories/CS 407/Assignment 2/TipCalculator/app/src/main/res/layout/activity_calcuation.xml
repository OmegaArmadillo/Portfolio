<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="74dp">

        <TextView
            android:id="@+id/tipTagBox"
            android:layout_width="88dp"
            android:layout_height="25dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="45dp"
            android:layout_marginEnd="40dp"
            android:text="@string/tipText" />

        <TextView
            android:id="@+id/tipAmountBox"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_marginStart="-40dp"
            android:layout_marginTop="45dp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="65dp">

        <TextView
            android:id="@+id/totalTagBox"
            android:layout_width="86dp"
            android:layout_height="25dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="36dp"
            android:text="@string/totalText" />

        <TextView
            android:id="@+id/totalAmountBox"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_marginTop="36dp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="62dp">

        <TextView
            android:id="@+id/perPersonTagBox"
            android:layout_width="145dp"
            android:layout_height="25dp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="36dp"
            android:text="@string/amountText" />

        <TextView
            android:id="@+id/perPersonBox"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_marginTop="36dp" />

    </TableRow>

</LinearLayout>